{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Ashlar data modelling specification",
  "description": "Data modelling specification for the Ashlar project",
  "type": "object",
  "definitions": {
    "AshlarModel": {
      "type": "object",
      "properties": {
        "uuid": {
          "type": "string",
          "format": "uuid"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "modified": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "uuid",
        "created",
        "modified"
      ]
    },
    "RecordType": {
      "allOf": [
        { "$ref": "#/definitions/AshlarModel" },
        {
          "properties": {
            "label": {
              "type": "string"
            },
            "plural_label": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "active": {
              "type": "boolean",
              "default": "true"
            }
          },
          "required": [
            "label",
            "plural_label",
            "active"
          ]
        ]
      }
    },
    "RecordSchema": {
      "allOf": [
        { "$ref": "#/definitions/AshlarModel" },
        {
          "properties": {
            "recordTypeId": {
              "type": "string",
              "format": "uuid"
            }
            "version": {
              "type": "integer",
              "format": "int32"
            },
            "schema": {
              "type": "object"
            },
            "nextVersionId": {
              "type": "integer",
              "format": "int32"
            }
          },
          "required": [
            "recordTypeId",
            "version",
            "schema"
          ]
        }
      ]
    },
    "Record": {
      "allOf": [
        { "$ref": "#/definitions/AshlarModel" },
        {
          "properties": {
            "schemaId": {
              "type": "string",
              "format": "uuid"
            },
            "data": {
              "type": "object",
            },
            "archived": {
              "type": "boolean",
              "default": "false"
            }
          },
          "required": [
            "schemaId",
            "data",
            "archived"
          ]
        }
      ]
    }
  }
}
